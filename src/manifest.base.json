{
  "manifest_version": 3,
  "name": "__NAME__",
  "version": "__VERSION__",
  "description": "__DESC__",
  "author": "__AUTHOR__",
  "icons": {
    "16": "./icon/16.png",
    "48": "./icon/48.png",
    "96": "./icon/96.png",
    "128": "./icon/128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "./popup/icon/16.png",
      "32": "./popup/icon/32.png",
      "64": "./popup/icon/64.png"
    }
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.bundle.js"
  }
}
